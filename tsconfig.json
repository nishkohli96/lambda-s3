{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "incremental": false,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}